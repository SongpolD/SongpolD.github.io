        </div>
    </footer>

    <script>
        // Sample product data
        const products = [
            {
                id: 1,
                name: "เสื้อยืดสีขาว",
                price: 350,
                description: "เสื้อยืดคอกลมสีขาวผลิตจากผ้าฝ้าย 100% นุ่มสบาย สวมใส่ได้ทุกโอกาส",
                image: "/api/placeholder/400/320",
                stock: 25
            },
            {
                id: 2,
                name: "กางเกงยีนส์",
                price: 950,
                description: "กางเกงยีนส์ทรงตรงสีกรมท่า ผลิตจากผ้ายีนส์คุณภาพดี ทนทาน",
                image: "/api/placeholder/400/320",
                stock: 15
            },
            {
                id: 3,
                name: "รองเท้าผ้าใบ",
                price: 1290,
                description: "รองเท้าผ้าใบสีขาวดีไซน์เรียบง่าย สวมใส่สบาย เข้าได้กับทุกชุด",
                image: "/api/placeholder/400/320",
                stock: 10
            },
            {
                id: 4,
                name: "กระเป๋าสะพาย",
                price: 790,
                description: "กระเป๋าสะพายหนังสังเคราะห์คุณภาพดี ดีไซน์ทันสมัย จุของได้เยอะ",
                image: "/api/placeholder/400/320",
                stock: 8
            },
            {
                id: 5,
                name: "หมวกแก๊ป",
                price: 290,
                description: "หมวกแก๊ปสีดำ ปรับขนาดได้ ผลิตจากผ้าคุณภาพดี ระบายอากาศได้ดี",
                image: "/api/placeholder/400/320",
                stock: 30
            },
            {
                id: 6,
                name: "แว่นตากันแดด",
                price: 590,
                description: "แว่นตากันแดดกรอบสีดำ เลนส์ป้องกัน UV กันแดดได้ดี ทนทาน",
                image: "/api/placeholder/400/320",
                stock: 12
            }
        ];

        // Cart array to store cart items
        let cart = [];

        // Function to display products
        function displayProducts() {
            const productsGrid = document.getElementById('products-grid');
            productsGrid.innerHTML = '';

            products.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <img src="${product.image}" alt="${product.name}" class="product-img">
                    <div class="product-info">
                        <h3 class="product-title">${product.name}</h3>
                        <p class="product-price">฿${product.price.toLocaleString()}</p>
                        <button class="add-to-cart" onclick="viewProduct(${product.id})">ดูรายละเอียด</button>
                    </div>
                `;
                productsGrid.appendChild(productCard);
            });
        }

        // Function to view product detail
        function viewProduct(productId) {
            const product = products.find(p => p.id === productId);
            const productDetailContainer = document.getElementById('product-detail-container');
            
            productDetailContainer.innerHTML = `
                <img src="${product.image}" alt="${product.name}" class="detail-img">
                <div class="detail-info">
                    <h2 class="detail-title">${product.name}</h2>
                    <p class="detail-price">฿${product.price.toLocaleString()}</p>
                    <p class="detail-desc">${product.description}</p>
                    <div class="quantity">
                        <span>จำนวน:</span>
                        <button class="quantity-btn" onclick="decreaseQuantity()">-</button>
                        <input type="number" value="1" min="1" max="${product.stock}" class="quantity-input" id="product-quantity">
                        <button class="quantity-btn" onclick="increaseQuantity(${product.stock})">+</button>
                    </div>
                    <button class="btn back-btn" onclick="showProducts()">กลับ</button>
                    <button class="btn" onclick="addToCart(${product.id})">เพิ่มลงตะกร้า</button>
                </div>
            `;
            
            // Show product detail section and hide other sections
            document.getElementById('home').style.display = 'none';
            document.getElementById('products').style.display = 'none';
            document.getElementById('product-detail').style.display = 'block';
            document.getElementById('cart').style.display = 'none';
        }

        // Function to increase quantity
        function increaseQuantity(maxStock) {
            const quantityInput = document.getElementById('product-quantity');
            if (parseInt(quantityInput.value) < maxStock) {
                quantityInput.value = parseInt(quantityInput.value) + 1;
            }
        }

        // Function to decrease quantity
        function decreaseQuantity() {
            const quantityInput = document.getElementById('product-quantity');
            if (parseInt(quantityInput.value) > 1) {
                quantityInput.value = parseInt(quantityInput.value) - 1;
            }
        }

        // Function to add product to cart
        function addToCart(productId) {
            const product = products.find(p => p.id === productId);
            const quantity = parseInt(document.getElementById('product-quantity').value);
            
            const existingItem = cart.find(item => item.id === productId);
            
            if (existingItem) {
                // Update quantity if product already in cart
                existingItem.quantity += quantity;
            } else {
                // Add new item to cart
                cart.push({
                    id: product.id,
                    name: product.name,
                    price: product.price,
                    image: product.image,
                    quantity: quantity
                });
            }
            
            // Update cart count
            updateCartCount();
            
            // Show products section
            showProducts();
            
            // Show success message
            alert(`เพิ่ม ${product.name} จำนวน ${quantity} ชิ้นลงในตะกร้าเรียบร้อยแล้ว`);
        }

        // Function to update cart count
        function updateCartCount() {
            const cartCount = document.querySelector('.cart-count');
            const totalItems = cart.reduce((total, item) => total + item.quantity, 0);
            cartCount.textContent = totalItems;
        }

        // Function to display cart
        function displayCart() {
            const cartItemsContainer = document.getElementById('cart-items');
            const cartSummaryContainer = document.getElementById('cart-summary');
            
            if (cart.length === 0) {
                // Display empty cart message
                cartItemsContainer.innerHTML = `
                    <div class="empty-cart">
                        <p>ตะกร้าสินค้าของคุณว่างเปล่า</p>
                        <button class="btn" onclick="showProducts()">เลือกซื้อสินค้า</button>
                    </div>
                `;
                cartSummaryContainer.innerHTML = '';
                return;
            }
            
            // Display cart items
            let cartItemsHTML = '';
            cart.forEach(item => {
                cartItemsHTML += `
                    <div class="cart-item">
                        <img src="${item.image}" alt="${item.name}" class="cart-item-img">
                        <div class="cart-item-info">
                            <h3 class="cart-item-title">${item.name}</h3>
                            <p class="cart-item-price">฿${item.price.toLocaleString()}</p>
                            <div class="cart-item-quantity">
                                <span>จำนวน: ${item.quantity}</span>
                                <button class="cart-item-remove" onclick="removeFromCart(${item.id})">ลบ</button>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            cartItemsContainer.innerHTML = cartItemsHTML;
            
            // Calculate cart summary
            const subtotal = cart.reduce((total, item) => total + (item.price * item.quantity), 0);
            const shipping = subtotal > 1000 ? 0 : 50;
            const total = subtotal + shipping;
            
            // Display cart summary
            cartSummaryContainer.innerHTML = `
                <div class="cart-summary">
                    <div class="summary-row">
                        <span>ยอดรวมสินค้า:</span>
                        <span>฿${subtotal.toLocaleString()}</span>
                    </div>
                    <div class="summary-row">
                        <span>ค่าจัดส่ง:</span>
                        <span>฿${shipping.toLocaleString()}</span>
                    </div>
                    <div class="summary-row summary-total">
                        <span>ยอดรวมทั้งหมด:</span>
                        <span>฿${total.toLocaleString()}</span>
                    </div>
                    <button class="btn checkout-btn" onclick="checkout()">สั่งซื้อสินค้า</button>
                </div>
            `;
        }

        // Function to remove item from cart
        function removeFromCart(productId) {
            cart = cart.filter(item => item.id !== productId);
            updateCartCount();
            displayCart();
        }

        // Function to proceed to checkout
        function checkout() {
            // Implement checkout functionality here
            alert('ขอบคุณสำหรับการสั่งซื้อ! เราจะดำเนินการจัดส่งสินค้าให้คุณโดยเร็วที่สุด');
            
            // Clear cart
            cart = [];
            updateCartCount();
            
            // Redirect to home
            showHome();
        }

        // Function to show home section
        function showHome() {
            document.getElementById('home').style.display = 'block';
            document.getElementById('products').style.display = 'block';
            document.getElementById('product-detail').style.display = 'none';
            document.getElementById('cart').style.display = 'none';
        }

        // Function to show products section
        function showProducts() {
            document.getElementById('home').style.display = 'none';
            document.getElementById('products').style.display = 'block';
            document.getElementById('product-detail').style.display = 'none';
            document.getElementById('cart').style.display = 'none';
        }

        // Function to show cart section
        function showCart() {
            document.getElementById('home').style.display = 'none';
            document.getElementById('products').style.display = 'none';
            document.getElementById('product-detail').style.display = 'none';
            document.getElementById('cart').style.display = 'block';
            
            // Display cart items
            displayCart();
        }

        // Initialize the page
        window.onload = function() {
            displayProducts();
            updateCartCount();
            showHome();
        }
    </script>
</body>
</html>
