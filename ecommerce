                <li><a href="#" onclick="showProducts()">สินค้า</a></li>
                <li><a href="#" onclick="showCart()" class="cart-icon">
                    ตะกร้าสินค้า
                    <span class="cart-count">0</span>
                </a></li>
            </ul>
        </div>
    </header>

    <!-- Home Section -->
    <section class="hero" id="home">
        <div class="container">
            <h1>ยินดีต้อนรับสู่ ThaiShop</h1>
            <p>ร้านค้าออนไลน์ที่ดีที่สุดสำหรับผลิตภัณฑ์คุณภาพสูง</p>
            <a href="#" class="btn" onclick="showProducts()">ช้อปเลย</a>
        </div>
    </section>

    <!-- Products Section -->
    <section class="products" id="products">
        <div class="container">
            <h2 class="section-title">สินค้าของเรา</h2>
            <div class="products-grid" id="products-grid">
                <!-- Products will be loaded here -->
            </div>
        </div>
    </section>

    <!-- Product Detail Section -->
    <section class="product-detail" id="product-detail">
        <div class="container">
            <div class="product-detail-container" id="product-detail-container">
                <!-- Product detail will be loaded here -->
            </div>
        </div>
    </section>

    <!-- Cart Section -->
    <section class="cart" id="cart">
        <div class="container">
            <h2 class="section-title">ตะกร้าสินค้า</h2>
            <div id="cart-items">
                <!-- Cart items will be loaded here -->
            </div>
            <div id="cart-summary">
                <!-- Cart summary will be loaded here -->
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <ul class="footer-links">
